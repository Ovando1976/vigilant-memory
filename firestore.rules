rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ğŸ” User Profiles: Allow any authenticated user to read/write their profile.
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // ğŸ’¬ Chat Messages: Allow any authenticated user to read/write messages.
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // ğŸ›‘ Admin Panel: For temporary testing, allow any authenticated user.
    match /admin/{doc} {
      allow read, write: if request.auth != null;
    }
    
    // ğŸ“¢ Blog Posts: Allow creation, update and deletion if the user is authenticated.
    match /blogPosts/{postId} {
      allow read, write: if request.auth != null;
    }
    
    // ğŸŸï¸ Event Posts: Allow any authenticated user to create and modify events.
    match /events/{eventId} {
      allow read, write: if request.auth != null;
    }
    
    // ğŸš˜ VIBER - Ride Booking System: Allow all authenticated users to create, update, and delete rides.
    match /rides/{rideId} {
      allow read, write: if request.auth != null;
    }
    
    // ğŸš– Drivers: Allow any authenticated user to view and update driver data.
    match /drivers/{driverId} {
      allow read, write: if request.auth != null;
    }
    
    // ğŸ’µ Payments: Allow any authenticated user to read/write payment records (for testing).
    match /payments/{paymentId} {
      allow read, write: if request.auth != null;
    }
    
    // ğŸ“Œ Notifications: Allow any authenticated user to read and create notifications.
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }
    
    // ğŸ¯ Groups: 
    // Schema: 
    //   - name: string
    //   - description: string
    //   - memberCount: number
    //   - image: string
    //   - createdBy: string (User ID)
    match /groups/{groupId} {
      allow read, write: if request.auth != null;
    }
    
    // ğŸ¯ Group Members:
    // Schema:
    //   - joinedAt: timestamp
    //   - role: "member" | "admin"
    // Users can read group membership data and write to their own membership document.
    match /groupMembers/{groupId}/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ğŸ¥ Video Rooms:
    // Schema:
    //   - active: boolean
    //   - host: string (User ID)
    //   - participants: array of userIds
    match /videoRooms/{groupId} {
      allow read, write: if request.auth != null;
    }
    
    // â›” Default: Deny everything else.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}